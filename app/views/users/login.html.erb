<style>
body{
    background: url("https://img.freepik.com/free-photo/light-brown-wooden-textured-background_53876-75016.jpg?size=626&ext=jpg");
}
h3{
    text-shadow: 1px 1px white;
    margin-top: 2em;
    text-align: center;
    font-size: 38px;
}
a:visited {
    text-decoration: none;
    color: black;
}
.login_body{
    border: 1px solid pink;
    padding: 20px;
    border-radius: 25px;
    background-color: rgba(255,255,255,0.45);
    text-align: center;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 24px;
}
.login{
    font-size: 18px;
}
.error_style{
    color: red;
    font-size: 20px;
}
</style>
<h3>Log-in</h3>
    <% if @login_errors != nil %>
    <% @login_errors.each do |error|%>
        <li class="error_style"><%=error%></li>
    <br>
<%end%>
<%end%>
<%= form_with({ method:'POST', url: '/users/login' }) do  | form | %>
<div class="login_body">       
<label>Username</label>        
<%= form.text_field(:user_name) %>
<br>    <br>
<label>Password</label>
<%= form.password_field(:password) %> 
<br>   <br>
<%= form.submit "Login", :class => "login" %>
<%end %>
<br>
<br>
 <label> or </label><br><br>

 <a href="/users/new">Sign-Up</a>