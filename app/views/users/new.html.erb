<style>
.error_style{
    color: red;
    font-size: 20px;
}
body{
    background: url("https://img.freepik.com/free-photo/light-brown-wooden-textured-background_53876-75016.jpg?size=626&ext=jpg");  
}
.new_user_body{
    margin-left: 50px;
    text-align: justify;
    text-justify: inter-word;
    font-size: 24px;
   
}
h1{
    margin-left: 10px;
    /*color: darkred;*/
    font-size: 38px;
}
.button{
    height: 250px;
    margin-left: 70px;
    width: 150px;
    font-size: 40px;

}
</style>
<% if( @error_messages != nil ) %>
    <ul>
        <% @error_messages.each do |error| %>
        <li class="error_style"><%= error %></li>
    <% end %>
    </ul>
<% end %>
<h1>Please Sign up to Create recipes!</h1>
<%= form_with(model: @user) do |form| %>
<br><br>
<div class="new_user_body">
<label> Enter Your Name: </label>
    <%= form.text_field(:name) %>
        <br><br>
<label> Enter a User Name:  </label>
    <%= form.text_field(:user_name) %>
        <br><br>
<label> Enter a Password: </label>
    <%= form.password_field(:password) %>
        <br><br>
<label> Add an image URL for your profile picture </label>
    <%=form.text_field(:img_url)%>
        <br><br>
<%= form.submit "Create New User", :class => "button"%>

<% end %>
</div>
